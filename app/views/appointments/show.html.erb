<div class="card card-outline card-danger">

  <div class="card-header with-border">
    <h5 class="card-title">
      <strong>
        Visualizar Cliente
      </strong>
    </h3>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td><strong>Nome:</strong></td>
              <td><%= @appointment&.name %></td>
            </tr>
            <tr>
              <td><strong>CPF:</strong></td>
              <td><%= format_date(@appointment.start_time) %></td>
            </tr>
            <tr>
              <td><strong>Telefone:</strong></td>
              <td><%= format_date(@appointment.end_time) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <div class="card-footer">
    <%= link_to 'Voltar', appointments_path, class: "btn btn-default" %>
    <%= link_to 'Editar', edit_appointment_path(@appointment), class: "btn btn-primary" %>
  </div>
</div>
