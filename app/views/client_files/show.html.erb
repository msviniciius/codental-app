<div class="card card-outline card-danger">

  <div class="card-header with-border">
    <h3 class="card-title">
      <strong>
        Visualizar Importação Pessoas
      </strong>
    </h3>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-bordered">
          <tbody>
          <tr>
            <td><strong>Ano</strong></td>
            <td><%= @client_files.year %></td>
          </tr>
          <tr>
            <td><strong>Mes de cadastro</strong></td>
            <td><%= @client_files.month %></td>
          </tr>
          <tr>
            <td><strong>Arquivo</strong></td>
            <td><%= @client_files.file %></td>
          </tr>
          </tbody>
        </table>
        <p>
        <table class="table table-striped bootstrap-table3">
          <thead>
          <tr>
            <th colspan="25" class="text-center align-middle">Detalhes do(s) Clientes</th>
          </tr>
          <tr>
            <th style="width: 10px">#</th>
            <th class="text-center align-middle">Nome</th>
            <th class="text-center align-middle"">Endereço</th>
            <th class="text-center align-middle"">Cidade</th>
            <th class="text-center align-middle"">Estado</th>
            <th class="text-center align-middle"">CEP</th>
            <th class="text-center align-middle"">Telefone</th>
            <th class="text-center align-middle"">CPF</th>
          </tr>
          </thead>
          <tbody>
          <% @client_files.clients.each do |ph| %>
            <tr>
              <td class="text-center align-middle"><%= ph.id %></td>
              <td class="text-center align-middle"><%= ph.name %></td>
              <td class="text-center align-middle"><%= ph.address %></td>
              <td class="text-center align-middle"><%= ph.city %></td>
              <td class="text-center align-middle"><%= ph.state %></td>
              <td class="text-center align-middle"><%= ph.zip_code %></td>
              <td class="text-center align-middle"><%= ph.phone %></td>
              <td class="text-center align-middle"><%= ph.cpf %></td>
              <td class='text-center align-middle'></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card-footer">
    <%= link_to 'Voltar', client_files_path, class: "btn btn-default" %>
    <%= link_to 'Nova Importação', new_client_file_path, class: "btn btn-danger" %>
    <%= link_to 'Editar Importação', edit_client_file_path(@client_files), class: "btn btn-primary" %>
  </div>
</div>
