<div class="card card-outline card-danger">

  <div class="card-header with-border">
    <h5 class="card-title">
      <strong>
        Visualizar Importação Pessoas
      </strong>
    </h3>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-bordered">
          <tbody>
          <tr>
            <td><strong>Ano</strong></td>
            <td><%= @client_file.year %></td>
          </tr>
          <tr>
            <td><strong>Mes de cadastro</strong></td>
            <td><%= @client_file.month %></td>
          </tr>
          <tr>
            <td><strong>Arquivo</strong></td>
            <td><%= @client_file.file.filename.to_s %></td>
          </tr>
          </tbody>
        </table>
        <p>
        <table class="table table-striped bootstrap-table3">
          <thead>
          <tr>
            <th colspan="25" class="text-center align-middle">Detalhes do(s) Clientes</th>
          </tr>
          <tr>
            <th style="width: 10px">#</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>CEP</th>
            <th>Telefone</th>
            <th>CPF</th>
            <th class="text-center align-middle"">Acões</th>
          </tr>
          </thead>
          <tbody>
          <% @client_files.clients.each do |ph| %>
            <tr>
              <td><%= ph.id %></td>
              <td><%= ph.name %></td>
              <td><%= ph.address %></td>
              <td><%= ph.city %></td>
              <td><%= ph.state %></td>
              <td><%= ph.zip_code %></td>
              <td><%= ph.phone %></td>
              <td><%= ph.cpf %></td>
              <td class='text-center'>
                <%= render 'shared/action_links', object: ph %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card-footer">
    <%= link_to 'Voltar', client_files_path, class: "btn btn-default" %>
    <%= link_to 'Editar Importação', edit_client_file_path(@client_files), class: "btn btn-primary" %>
  </div>
</div>
