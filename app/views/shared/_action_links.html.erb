<%= link_to object, data: {toggle: 'tooltip', placement: 'top', title: 'Visualizar'} do %>
  <i class="fa fa-eye" title="Visualizar"></i>
<% end %>
&nbsp;
<%= link_to eval_with_rescue("edit_#{object.class.to_s.underscore}_path(#{object.id})"), data: {toggle: 'tooltip', placement: 'top', title: 'Editar'} do %>
  <i class="fa fa-pencil text-yellow" title="Editar"></i>
<% end %>
&nbsp;
<% if object.respond_to?(:justification) %>
  <%= link_to eval_with_rescue("soft_deactivate_#{object.class.to_s.underscore}_path(#{object.id})"), data: {toggle: 'tooltip', placement: 'top', title: 'Desativar'} do %>
    <i class="fa fa-trash text-red" title="Desativar"></i>
  <% end %>
<% else %>
  <%= link_to object, method: :delete, data: {confirm: 'Tem certeza?', toggle: 'tooltip', placement: 'top', title: 'Apagar'} do %>
    <i class="fa fa-trash text-red" title="Apagar"></i>
  <% end %>
<% end %>
