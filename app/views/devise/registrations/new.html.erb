
<div class="login-box">
  <div class="login-logo">
    <a><b>Cadastre-se</b></a>
  </div>

  <div class="card-danger">
    <div class="card">
      <div class="card-body login-card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
          </div>
          <div class="mb-3">
            <%= f.input :password,
                        label: "Senha",
                        required: true,
                        hint: ("#{@minimum_password_length} caracteres minima" if @minimum_password_length),
                        input_html: { autocomplete: "Senha" } %>
          </div>          
          <div class="mb-3">
            <%= f.input :password_confirmation,
                        label: "Confirme sua senha",
                        required: true,
                        input_html: { autocomplete: "Confirme sua senha" } %>
          </div>
          <div class="col-4">
            <div class="d-grid gap-2">
              <%= button_to new_registration_path(resource_name), method: :get, class: "btn btn-danger" do %>
                Cadastre-se
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
