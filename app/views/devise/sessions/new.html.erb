<div class="login-box">
  <div class="login-logo">
    <b>Software odontol√≥gico</b> - CODENTAL</a>
  </div>
  <div class="login-logo">
    <a><b>Autentique-se</b></a>
  </div>

  <div class="card-danger">
    <div class="card">
      <div class="card-body login-card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
          <div class="mb-3">
            <%= f.input :email,
                        required: false,
                        label: false,
                        placeholder: "Email",
                        input_html: { class: "form-control", autocomplete: "email" } %>
          </div>
          <div class="mb-3">
            <%= f.input :password,
                        required: false,
                        label: false,
                        placeholder: "Password",
                        input_html: { class: "form-control", autocomplete: "current-password" } %>
          </div>

          <div class="row">
            <div class="col-8">
              <% if devise_mapping.rememberable? %>
                <div class="form">
                  <%= f.input :remember_me,
                              as: :boolean,
                              label: "Lembrar-me",
                              input_html: { class: "form-check-input", id: "flexCheckDefault" } %>
                </div>
              <% end %>
            </div>
            <div class="col-4">
              <div class="d-grid gap-2">
                <%= f.button :submit, "Sign In", class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        <% end %>
        <p class="mb-0">
          <a href="<%= new_registration_path(resource_name) %>" class="text-center">Cadastre-se</a>
        </p>
      </div>
    </div>
  </div>
</div>
